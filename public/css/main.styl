@import 'nib'

html
  width 100%
  height 100%
  overflow hidden
body
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  margin 0
  padding 0
  transform translate(50vw,50vh)
body:after
  content ' '
  border-right solid 1px #F00
  position absolute
  left 0
  height 100%
  margin-left -1px
  top -50%
body:before
  content ' '
  border-bottom solid 1px #F00
  position absolute
  top 0
  width 100%
  margin-top -1px
  left -50%
  
.building
  position absolute
  background #000
  z-index 1